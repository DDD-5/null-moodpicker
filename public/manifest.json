{
  "manifest_version": 2,
  "name": "Mood Picker",
  "description": "Chrome Extension for moodof",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "commands": {
    "pick": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle pick"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "web_accessible_resources": [
    "redirect_uri.html"
  ]
}